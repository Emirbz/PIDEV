{% extends 'base.html.twig' %}
{% block title %} Ajouter Restaurants {% endblock %}
{% block transparant %} {% endblock %}
{% block body %}



    <!-- Page Inner -->

        <section class="lis-bg-light pb-5">
            <div class="container pt-5">
                <div class="row wow fadeInUp">
                    <div class="col-12 col-sm-6">
                        <div class="page-title">
                            <h2>Ajout d'un Restaurant</h2>
                            <p class="mb-0">Ajouter votre restaurant</p>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        <!--End Page Inner -->
        <!-- Pricing -->
        <section>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-9 mb-5 mb-lg-0">

                        <div class="card lis-brd-light wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                            <hr/>
                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-tag pr-2 lis-f-14"></i>  Sous Categorie</h6>

                                </div>
                                <div class="col-12 col-sm-12">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Sous Categorie</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_start(form) }}
                                            {{ form_errors(form.souscat) }}
                                            {{ form_widget(form.souscat,{'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0'}})}}
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <hr/>

                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-align-left pr-2 lis-f-14"></i>  Nom & Description </h6>

                                </div>
                                <div class="col-12 col-sm-12">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Email</label>
                                        <div class="col-12 col-md-10">

                                             {{ form_errors(form.email) }}
                                            {{ form_widget(form.email,{'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Email de l\'etablissement !'}}) }}

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Libelle</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_errors(form.name) }}
                                            {{ form_widget(form.name, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Nom de l\'etablissement !'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Description</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_errors(form.description) }}
                                            {{ form_widget(form.description, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Description de l\'etablissement '}}) }}
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <hr/>

                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-file-image-o pr-2 lis-f-14"></i> Images </h6>

                                </div>
                                <div class="col-12 col-sm-12">

                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-3 col-form-label">Photo Principale</label>
                                        <div class="col-12 col-md-9">
                                           {{ form_widget(form.DevisFile) }}


                                        </div>
                                        <label for="example-text-input" class="col-12 col-md-3 col-form-label">Photo de couverture </label>
                                        <div class="col-12 col-md-9">

                                            {{ form_widget(form.img1) }}


                                        </div>
                                        <label for="example-text-input" class="col-12 col-md-3 col-form-label">Photo 1 </label>
                                        <div class="col-12 col-md-9">
                                            {{ form_widget(form.img2) }}

                                        </div>
                                        <label for="example-text-input" class="col-12 col-md-3 col-form-label">Photo 2</label>
                                        <div class="col-12 col-md-9">
                                            {{ form_widget(form.img3) }}

                                        </div>
                                    </div>


                                </div>

                            </div>
                            <hr/>

                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-info-circle pr-2 lis-f-14"></i> Information de l'etablissement </h6>

                                </div>
                                <div class="col-12 col-sm-12">

                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-3 col-form-label">Phone number(optional)</label>
                                        <div class="col-12 col-md-9">
                                            {{ form_errors(form.phone) }}
                                            {{ form_widget(form.phone, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':' Numero de telephone '}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-3 col-form-label">Website(optional)</label>
                                        <div class="col-12 col-md-9">
                                            {{ form_errors(form.website) }}
                                            {{ form_widget(form.website, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Adresse web !'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-3 col-form-label">Facebook</label>
                                        <div class="col-12 col-md-9">
                                            {{ form_errors(form.facebook) }}
                                            {{ form_widget(form.facebook, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'https://www.facebook.com/Votre_profil'}}) }}
                                        </div>
                                    </div>

                                    </div>

                                </div>

                            </div>

                            <hr/>



                            <hr/>
                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-clock-o pr-2 lis-f-14"></i>Heures d'ouverture</h6>

                                </div>
                                <div class="col-12 col-sm-12">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Lundi-Samedi</label>
                                        <div class="col-12 col-md-5">
                                           {{ form_errors(form.lundisamedio) }}
                                            {{ form_widget(form.lundisamedio, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0'}}) }}
                                        </div>
                                        <div class="col-12 col-md-5">
                                            {{ form_errors(form.lundisamedif) }}
                                            {{ form_widget(form.lundisamedif, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Dimanche</label>
                                        <div class="col-12 col-md-5">
                                            {{ form_errors(form.dimancheo) }}
                                            {{ form_widget(form.dimancheo, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0'}}) }}
                                        </div>
                                        <div class="col-12 col-md-5">
                                            {{ form_errors(form.dimancheo) }}
                                            {{ form_widget(form.dimanchef, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0'}}) }}
                                        </div>
                                    </div>

                                </div>

                            </div>

                            <hr/>

                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-link pr-2 lis-f-14"></i>  Equipement </h6>

                                </div>
                                <div class="col-12 col-sm-12 social-information">
                                    <div class="form-group row">
                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Parking
                                                {{ form_errors(form.parking) }}
                                                {{ form_widget(form.parking) }}
                                                <span class="checkmark"></span>
                                            </label>

                                        </div>
                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Accepte les cartes  des crédits
                                                {{ form_errors(form.cartecredit) }}
                                                {{ form_widget(form.cartecredit) }}
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Chaise roulante
                                                {{ form_errors(form.chaiseroulante) }}
                                                {{ form_widget(form.chaiseroulante) }}
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Autorisation de fumer

                                                {{ form_errors(form.fumer) }}
                                                {{ form_widget(form.fumer) }}
                                                <span class="checkmark"></span>
                                            </label>

                                        </div>
                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox"> Alcool

                                                {{ form_errors(form.alcool) }}
                                                {{ form_widget(form.alcool) }}
                                                <span class="checkmark"></span>
                                            </label>

                                        </div>

                                        <div class="col-12 col-md-4">
                                            <label class="custom-checkbox">Terasse
                                                {{ form_errors(form.terasse) }}
                                                {{ form_widget(form.terasse) }}
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Wifi
                                                {{ form_errors(form.wifi) }}
                                                {{ form_widget(form.wifi) }}
                                                <span class="checkmark"></span>
                                            </label>

                                        </div>
                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Accepte les animaux
                                                {{ form_errors(form.animaux) }}
                                                {{ form_widget(form.animaux) }}
                                                <span class="checkmark"></span>
                                            </label>

                                        </div>

                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Livraison
                                                {{ form_errors(form.livraison) }}
                                                {{ form_widget(form.livraison) }}
                                                <span class="checkmark"></span>
                                            </label>

                                        </div>


                                    </div>
                                    <div class="form-group row">


                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Accepte les réservations
                                                {{ form_errors(form.reservations) }}
                                                {{ form_widget(form.reservations) }}
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>

                                        <div class="col-12 col-md-4">

                                            <label class="custom-checkbox">Climatisation
                                                {{ form_errors(form.climatisation) }}
                                                {{ form_widget(form.climatisation) }}
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>



                                    </div>


                                </div>

                            </div>
                            <hr/>

                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-map-o pr-2 lis-f-14"></i>  Localisation</h6>

                                </div>
                                <div class="col-12 col-sm-12">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Addresse</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_errors(form.address) }}
                                            {{ form_widget(form.address, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Adresse '}}) }}
                                        </div>
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Latitude</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_errors(form.latitude) }}
                                            {{ form_widget(form.latitude, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Latitude'}}) }}
                                        </div>
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Longitude</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_errors(form.longitude) }}
                                            {{ form_widget(form.longitude, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Longitude '}}) }}
                                        </div>
                                    </div>


                                </div>

                                <div class="col-12 col-sm-12">
                                    {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-primary btn-default mt-3' }}) }} </div>
                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>




        </section>
        <!--End Pricing -->
        <!-- Features -->






{% endblock %}