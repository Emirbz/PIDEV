{% extends "admin.html.twig" %}
{% block content%}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Forms</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>Liste des Centres Culturels</h1>
            </div>
            <div class="panel-body">
                <table border="1" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Categorie</th>
                        <th>Sous categorie</th>
                        <th>Telephone</th>
                        <th>Email</th>
                        <th>Proprietaire</th>
                        <th>Supprimer</th>
                        <th>Modifier</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for i in restaurants%}
                        <tr>
                            <td>{{ i.id }}</td>
                            <td>{{ i.name }}</td>
                            <td>{{ i.address }}</td>
                            <td>{{ i.categorie }}</td>
                            <td>{{ i.souscat.nom }}</td>
                            <td>{{ i.phone }}</td>
                            <td>{{ i.email}}</td>
                            <td>{{ i.iduser.name }}</td>


                            <td><a href="{{ path('App_bon_plan_delete_restaurant_admin',{'id':i.id}) }}"> Supprimer</a></td>
                            <td><a href="{{ path('App_bon_plan_update_culture_admin',{'id':i.id}) }}"> Modifier</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block myscript %}
    <!-- DataTables JavaScript -->
    <script src=" {{ asset('BackOffice/vendor/datatables/js/jquery.dataTables.js') }} " ></script>
    <script src=" {{ asset('BackOffice/vendor/datatables-plugins/dataTables.bootstrap.js') }}"></script>
    <script src=" {{ asset('BackOffice/vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}