{% extends 'base.html.twig' %}
{% block title %} Theme {% endblock %}
{% block transparant %}{% endblock %}
{% block body %}

    <!-- Page Inner -->
    <section class="lis-bg-light pb-5">
        <div class="container pt-5">
            <div class="row wow fadeInUp">
                <div class="col-12 col-sm-6">
                    <div class="page-title">
                        <h2>Add Theme</h2>
                        <p class="mb-0">You  can add your theme here</p>
                    </div>
                </div>
                <div class="col-12 col-sm-6 text-left text-sm-right">
                    <ol class="breadcrumb mb-0 pl-0 bg-transparent">
                        <li class="breadcrumb-item d-inline-block float-none"><a href="{{ path('homepage') }}" class="lis-light">Home</a></li>
                        <li class="breadcrumb-item d-inline-block float-none active">Add Theme</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <!--End Page Inner -->
    <!-- Pricing -->
    {{ form_start(form) }}
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-9 mb-5 mb-lg-0">
                    <div class="card lis-brd-light wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                        <div class="card-body p-0">
                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-align-left pr-2 lis-f-14"></i>  Define Your Theme </h6>

                                </div>
                                <div class="col-12 col-sm-12">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Theme Name</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_widget(form.name, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Title'}}) }}
                                        </div>
                                    </div>


                                </div>
                                <br/>
                                <div class="col-12 col-sm-12">
                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-2 col-form-label">Theme Description</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_widget(form.description, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Description'}}) }}
                                        </div>
                                    </div>


                                </div>
                            </div>


                            <hr/>
                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-file-image-o pr-2 lis-f-14"></i> Images </h6>

                                </div>
                                <div class="col-12 col-sm-12">

                                    <div class="form-group row">
                                        <label for="example-text-input" class="col-12 col-md-3 col-form-label">Cover Image</label>
                                        <div class="col-12 col-md-9">

                                            {{ form_errors(form.devisFile) }}
                                            {{ form_widget(form.devisFile) }}
                                        </div>


                                    </div>

                                </div>
                                <hr/>
                                <div class="row p-4">
                                    <div class="col-12 col-sm-12 mb-3">


                                    </div>


                                    <div class="col-12 col-sm-12"> <input type="submit" class="btn btn-primary btn-default mt-3" value="Save & Preview"> </div>
                                </div>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

    {{ form_end(form) }}
{% endblock %}